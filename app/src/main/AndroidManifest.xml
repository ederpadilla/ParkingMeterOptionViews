<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ederdev.padilla.driveoptionviews">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".option_one.OptionOneActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".option_two.OptionTwoActivity"
            android:label="@string/title_activity_option_two"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".option_surprise.SurpriseActivity"
            android:label="@string/title_activity_surprise"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>