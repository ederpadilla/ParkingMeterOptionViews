<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ederdev.padilla.driveoptionviews.option_one.OptionOneActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/progress_gray_dark"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_parking"
                android:contentDescription="@string/parking" />
            <ImageView
                android:contentDescription="@string/parkingmeter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_parking_meter" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_valet"
                android:contentDescription="@string/valet" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/ticket"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/parkingmeter"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/valet"/>
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/car_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:padding="4dp">
            <ImageView
                android:id="@+id/pay"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:src="@drawable/ic_car"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/car" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toEndOf="@id/pay"
                android:text="@string/car"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"/>

            <LinearLayout
                android:layout_toStartOf="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prueba 1"
                    android:textColor="@color/progress_gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phantom"
                    android:textColor="@color/gray_dark" />
            </LinearLayout>
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_right_arrow"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:contentDescription="@string/go" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:padding="4dp">
            <ImageView
                android:id="@+id/payment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:src="@drawable/ic_payment_method"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/payment_method" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toEndOf="@id/payment"
                android:text="@string/payment_method"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"/>

            <LinearLayout
                android:layout_toStartOf="@+id/arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Km Drive"
                    android:textColor="@color/progress_gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456788"
                    android:textColor="@color/gray_dark" />
            </LinearLayout>
            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_right_arrow"
                android:layout_centerInParent="true"
                android:contentDescription="@string/go" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:padding="4dp">
            <ImageView
                android:id="@+id/car"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_location_pin"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:padding="4dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/colony" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toEndOf="@id/car"
                android:text="@string/colony"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"/>



                <TextView
                    android:layout_toStartOf="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Florida"
                    android:layout_centerInParent="true"
                    android:textColor="@color/progress_gray_dark"
                    android:textStyle="bold" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/go"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_right_arrow"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"/>

        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:elevation="2dp"
                android:padding="3dp"
                android:background="@drawable/spinner_bg">
